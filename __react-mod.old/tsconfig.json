{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",

        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "allowJs": false,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}